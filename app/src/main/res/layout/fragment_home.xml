<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hero banner -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_welcome"
            style="@style/PNUGuide.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/img_hero"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/pnu"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Text overlay removed as welcome message is now shown below -->
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Centered welcome message below the hero image -->
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_progress"
            style="@style/PNUGuide.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_stamp_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stamp Progress"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_stamp_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stamps Collected: 5/10"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_stamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:indicatorColor="@color/primary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_download_map_top"
            style="@style/PNUGuide.NeutralButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:text="@string/download_map"
            app:icon="@drawable/ic_map"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_favorites"
            style="@style/PNUGuide.NeutralButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:text="@string/view_favorites"
            app:icon="@drawable/ic_favorite"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

<!--        <com.google.android.material.button.MaterialButton-->
<!--            android:id="@+id/btn_download_map"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="48dp"-->
<!--            android:layout_marginTop="24dp"-->
<!--            android:text="@string/download_map"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="@android:color/white"-->
<!--            app:icon="@drawable/ic_map"-->
<!--            app:iconGravity="textStart"-->
<!--            app:iconPadding="8dp"-->
<!--            app:backgroundTint="@color/primary"-->
<!--            app:cornerRadius="8dp" />-->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply_tour"
            style="@style/PNUGuide.NeutralButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="@string/tour_apply"
            app:icon="@drawable/ic_tour"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_open_youtube"
            style="@style/PNUGuide.RedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/open_youtube"
            app:icon="@drawable/ic_youtube"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
